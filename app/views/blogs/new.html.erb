<% provide :webpageTitle, "Write A New Blog" %>

<% provide :webpageCSS do %>
  <%= stylesheet_link_tag "editBlog", :media=>"all" %>
<% end %>


<%= form_for @dBlog do |f| %>
  <% @bHasCategory=Array.new($aoBlogCategories.length,false) %>
  <% asCategory=parseCategory(@dBlog.category) %> 
  <% asCategory.each do |sC|%>
    <% @bHasCategory[$hsiCategoryNameToArrayIndex[sC]]=true %>
  <% end %>

  <%= render :partial=>'blogEditor',:locals=>{:form=>f} %>
  <%= f.submit %>
<% end %>
