<% nUserTimeZoneOffset=cookies[:userTimeZone].to_i %>
<% @dbBlogs.each do |b| %>
  <div class="BlogGlance">
    <h2 class="BlogTitleAbstract"><%= link_to b.title, b, :title=>b.title %></h2>
    
    <p class="BlogDateAuthor">[Author: <%= link_to b.author, blogsByAuthor_path(:byAuthor=>b.author) %>] &#160; [<%= b.updated_at.in_time_zone(nUserTimeZoneOffset).strftime("%a, %Y-%m-%d, %H:%M") %>] &#160; [<%= b.views %> views]</p>
    
    <p>      
      <% asCategory=parseCategory(b.category) %>
      <% asCategory.each do |sC| %>
        <%= link_to sC, blogsCategory_path(:type=>sC), {:class=>"BlogCategory"} %>
      <% end %>
    </p>
    
    <div class="BlogAbstract"><pre><%= raw(b.abstract.gsub(/\n/,"</pre><pre>")) %> ... <i><%= link_to "see full article", b, :class=>"SeeFullArticleTag" %></i></pre></div>

    
    <% if usernameForSignedInUser==b.author || isAdministrator %>
      <p class="BlogManage">
        <%= link_to "Edit", edit_blog_path(b) %>
        <%= link_to "Delete", b, :method=>:delete, data:{confirm: 'Are you sure?'} %>
      </p>
    <% end %>
  </div>
<% end %>
